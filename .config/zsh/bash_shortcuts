alias vim="nvim"
alias la="ls -a"
alias l="ls -l"
alias ll="ls -al"
alias mkd="mkdir -p"
alias Txa="cp ~/Documenti/LaTeX/article.tex"
alias Txbe="cp ~/Documenti/LaTeX/beamer.tex"
alias Txb="cp ~/Documenti/LaTeX/book.tex"
alias std="shutdown -h now"
alias reb="reboot"
alias rn="ranger"
alias srn="sudo ranger"
alias vrc="~/.local/bin/shell/vimrc"
alias brc="~/.local/bin/shell/bashrc"
alias bsrc="~/.local/bin/shell/bash_shortcuts"
alias dmm="dmenumount"
alias dmu="dmenuumount"
alias ink="inkscape"
alias libo="libreoffice"
alias wri="libreoffice --writer"
